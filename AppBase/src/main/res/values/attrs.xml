<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="NoPaddingTextView">
        <attr name="removeDefaultPadding" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RectImageView">
        <attr name="lf_is_circle" format="boolean" />
        <attr name="lf_is_cover_src" format="boolean" />
        <attr name="lf_corner_radius" format="dimension" />
        <attr name="lf_corner_top_left_radius" format="dimension" />
        <attr name="lf_corner_top_right_radius" format="dimension" />
        <attr name="lf_corner_bottom_left_radius" format="dimension" />
        <attr name="lf_corner_bottom_right_radius" format="dimension" />
        <attr name="lf_border_width" format="dimension" />
        <attr name="lf_border_color" format="color" />
        <attr name="lf_inner_border_width" format="dimension" />
        <attr name="lf_inner_border_color" format="color" />
        <attr name="lf_mask_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="lf_circle_border_width" format="dimension" />
        <attr name="lf_circle_border_color" format="color" />
        <attr name="lf_circle_border_overlay" format="boolean" />
        <attr name="lf_circle_background_color" format="color" />
    </declare-styleable>
</resources>